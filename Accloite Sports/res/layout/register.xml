<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.accolite.sports.Contacts"
    tools:ignore="MergeRootFrame" >
    
    <Button
        android:id="@+id/teamRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_gravity="center_horizontal|top"        
        android:onClick="teamRegister"
        android:text="@string/teamRegister"
            />
    
    <Button
        android:id="@+id/individualRegister"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:layout_gravity="center_horizontal|top"
     android:text="@string/individualRegister"
     android:onClick="individualRegister" />
    

</LinearLayout>